<Defs>

	<TerrainDef Name="CoveredBridgeBase" Abstract="True">
		<layerable>true</layerable>
		<bridge>true</bridge>
		<isFoundation>true</isFoundation>
		<isPaintable>true</isPaintable>
		<designationCategory>Structure</designationCategory>
		<fertility>0</fertility>
		<terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
		<preventCraters>true</preventCraters>
		<edgeType>Hard</edgeType>
		<renderPrecedence>400</renderPrecedence>
		<autoRebuildable>true</autoRebuildable>
		<drawStyleCategory>Foundations</drawStyleCategory>
		<destroyBuildingsOnDestroyed>true</destroyBuildingsOnDestroyed>
		<destroyEffect>Bridge_Collapse</destroyEffect>
		<destroyEffectWater>Bridge_CollapseWater</destroyEffectWater>
		<cropIcon>false</cropIcon>
	</TerrainDef>

	<TerrainDef ParentName="CoveredBridgeBase">
		<defName>CoveredBridge</defName>
		<label>covered bridge</label>
		<description>A flat wooden surface on supportive panels which can be built over water. You can build light structures on bridges, but be careful - bridges are fragile. If a bridge falls, buildings on top of it fall as well.</description>
		<texturePath>Terrain/Surfaces/CoveredWoodFloor</texturePath>
		<bridgePropsPath>Terrain/Misc/CoveredBridgeProps</bridgePropsPath>
		<spaceBridgePropsPath>Terrain/Misc/BridgeSpaceProps</spaceBridgePropsPath>
		<color>(108,78,55)</color>
		<uiIconPath>Terrain/Surfaces/CoveredBridge_MenuIcon</uiIconPath>
		<affordances>
			<li>Light</li>
		</affordances>
		<constructEffect>ConstructWood</constructEffect>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>0.8</Flammability>
		</statBases>
		<costList>
			<WoodLog>12</WoodLog>
		</costList>
		<designationHotKey>Misc4</designationHotKey>
		<destroyOnBombDamageThreshold>35</destroyOnBombDamageThreshold>
	</TerrainDef>

	<TerrainDef ParentName="CoveredBridgeBase">
		<defName>CoveredHeavyBridge</defName>
		<label>covered heavy bridge</label>
		<description>A stronger and face covered version of the basic bridge which supports heavy structures on top. You can build a whole colony on water with this.</description>
		<texturePath>Terrain/Surfaces/GenericFloorTile</texturePath>
		<bridgePropsPath>Terrain/Misc/CoveredHeavyBridgeProps</bridgePropsPath>
		<spaceBridgePropsPath>Terrain/Misc/HeavyBridgeSpaceProps</spaceBridgePropsPath>
		<color>(1.0, 1.0, 1.0)</color>
		<uiIconPath>Terrain/Surfaces/CoveredHeavyBridge_MenuIcon</uiIconPath>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
			<li>Walkable</li>
		</affordances>
		<constructEffect>ConstructMetal</constructEffect>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
		</statBases>
		<costList>
			<Steel>14</Steel>
		</costList>
		<researchPrerequisites>
			<li>HeavyBridges</li>
		</researchPrerequisites>
		<designationHotKey>Misc4</designationHotKey>
		<destroyOnBombDamageThreshold>45</destroyOnBombDamageThreshold>
	</TerrainDef>


