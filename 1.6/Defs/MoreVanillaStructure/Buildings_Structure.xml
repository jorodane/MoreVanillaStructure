	<ThingDef ParentName="BuildingBase">
		<defName>FenceLight</defName>
		<label>fence light</label>
		<description>A fence made of posts joined by crossbars used for building pens for certain kinds of animals. Some kinds of animals can get past fences. Predators will not hunt creatures on the other side of a fence, but may still wander inside.</description>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<replaceTags>
			<li>Wall</li>
		</replaceTags>
		<graphicData>
			<texPath>Things/Building/Linked/FenceLight</texPath>
			<graphicClass>Graphic_Appearances</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<linkType>Asymmetric</linkType>
			<linkFlags>
				<li>Fences</li>
			</linkFlags>
			<asymmetricLink>
				<linkFlags>
					<li>Wall</li>
					<li>Rock</li>
				</linkFlags>
				<linkToDoors>true</linkToDoors>
				<drawDoorBorderEast>
					<color>(0,0,0)</color>
					<size>(0.04, 0.77)</size>
					<offset>(0.5, 0, -0.08)</offset>
				</drawDoorBorderEast>
				<drawDoorBorderWest>
					<color>(0,0,0)</color>
					<size>(0.04, 0.77)</size>
					<offset>(-0.5, 0, -0.08)</offset>
				</drawDoorBorderWest>
			</asymmetricLink>
			<shadowData>
				<volume>(0.3, 0.5, 0.3)</volume>
				<offset>(0,0,-0.23)</offset>
			</shadowData>
			<damageData>
				<rect>(0.35,0.1,0.3,0.7)</rect>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Linked/FenceLight/Fence_MenuIcon</uiIconPath>
		<uiIconPathsStuff>
			<li>
				<appearance>Metal</appearance>
				<iconPath>Things/Building/Linked/FenceLight/FenceMetal_MenuIcon</iconPath>
			</li>
		</uiIconPathsStuff>
		<statBases>
			<MaxHitPoints>40</MaxHitPoints>
			<WorkToBuild>70</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<costStuffCount>1</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>80</pathCost>
		<blockWind>false</blockWind>
		<fillPercent>0.25</fillPercent>
		<drawStyleCategory>Defenses</drawStyleCategory>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Structure</designationCategory>
		<uiOrder>2020</uiOrder>
		<canOverlapZones>false</canOverlapZones>
		<fertility>0</fertility>
		<costList>
			<Steel>20</Steel>
		</costList>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_GlowRadius</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<building>
			<isInert>true</isInert>
			<isFence>true</isFence>
			<isPlaceOverableWall>true</isPlaceOverableWall>
			<ai_chillDestination>false</ai_chillDestination>
			<ai_neverTrashThis>true</ai_neverTrashThis>
			<relatedBuildCommands>
				<li>PenMarker</li>
				<li>FenceGate</li>
			</relatedBuildCommands>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Fence_Blueprint</texPath>
				<graphicClass>Graphic_Appearances</graphicClass>
			</blueprintGraphicData>
			<paintable>true</paintable>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>30</basePowerConsumption>
				<powerUpgrades>
					<li>
						<researchProject>ColoredLights</researchProject>
						<factor>0.5</factor>
					</li>
				</powerUpgrades>
			</li>
			<li Class="CompProperties_Styleable" />
			<li Class="CompProperties_Glower">
				<glowRadius>11</glowRadius>
				<glowColor>(214,148,94,0)</glowColor>
				<colorPickerEnabled>true</colorPickerEnabled>
				<darklightToggle>true</darklightToggle>
			</li>
		</comps>
	</ThingDef>

  <ThingDef Name="GlassDoor" ParentName="DoorBase">
    <defName>GlassDoor</defName>
