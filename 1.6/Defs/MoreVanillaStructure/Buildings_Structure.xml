    <statBases>
      <WorkToBuild>850</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/GlassDoorSimple_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Door/GlassDoorSimple_MenuIcon</uiIconPath>
    <costList>
      <Steel>10</Steel>
    </costList>
    <costStuffCount>15</costStuffCount>
    <designationHotKey>Misc1</designationHotKey>
    <building>
      <isStuffableAirtight>true</isStuffableAirtight>
